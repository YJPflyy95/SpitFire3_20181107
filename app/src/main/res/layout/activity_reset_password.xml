<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="false"
    android:orientation="vertical"
    tools:context="org.astri.spitfire.ResetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/ResetPassword_tv"
            android:layout_width="326dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Reset Password"
            android:textColor="#000000"
            android:textSize="24sp"
            android:visibility="visible"
            tools:text="Reset Password" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/EmailAddress_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left"
            android:hint="Email Address"
            android:selectAllOnFocus="false"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"/>

        <Button
            android:id="@+id/SendReset_bt"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:background="#21D347"
            android:text="Send me a reset email"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFE0" />
    </LinearLayout>
</LinearLayout>

