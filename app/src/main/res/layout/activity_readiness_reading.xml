            app:citv_fill_color="#009900"
            app:citv_text_color="@android:color/white"
            app:citv_text_padding="35dp"
            app:citv_text_size="20sp"
            app:citv_text_text="HRV:62" />
    </LinearLayout>

    <LinearLayout
