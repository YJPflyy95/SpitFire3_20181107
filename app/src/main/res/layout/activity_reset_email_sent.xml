<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:alwaysDrawnWithCache="false"
android:orientation="vertical"
tools:context="org.astri.spitfire.ResetEmailSentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/ResetEmailSent_tv"
            android:layout_width="326dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Reset Email Sent"
            android:textColor="#000000"
            android:textSize="24sp"
            android:visibility="visible"
            tools:text="Reset Email Sent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tick_iv"
            android:layout_width="290dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:adjustViewBounds="false"
            android:paddingTop="10dip"
            android:cropToPadding="false"
            android:src="@drawable/tick" />

        <TextView
            android:id="@+id/EmailAddress_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:maxLines="3"
            android:textStyle="bold"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text=" A password resent link has been sent to your mailbox.\n
         Please follow the link to reset your password.\n
         Redirecting to Login page ... 3s"
            android:textColor="#333333" />
    </LinearLayout>


</LinearLayout>

