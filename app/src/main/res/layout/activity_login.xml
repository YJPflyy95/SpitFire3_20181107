<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="false"
    android:orientation="vertical"
    tools:context="org.astri.spitfire.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/Login_tv"
            android:layout_width="326dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="                     Login"
            android:textColor="#000000"
            android:textSize="24sp"
            android:visibility="visible"
            tools:text="                     Login" />

        <Button
            android:id="@+id/Register_bt"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:backgroundTint="?android:attr/detailsElementBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingBottom="5dip"
            android:paddingTop="10dip"
            android:text="Register      "
            android:textColor="#999999"
            android:textAllCaps="false"

            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/EmailAddress_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left"
            android:hint="Email Address"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:selectAllOnFocus="false"
            android:singleLine="false" />

        <EditText
            android:id="@+id/Password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left"
            android:hint="Password"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:selectAllOnFocus="false"
            android:singleLine="false" />

        <Button
            android:id="@+id/Login_bt"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="#21D347"
            android:text="Login"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFE0" />

        <Button
            android:id="@+id/ForgetPassword_bt"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Forget Password"
            android:textAllCaps="false"
            android:textColor="#999999"
            android:textSize="20dp" />
        <!--android:background="@android:drawable/screen_background_light"-->
        <!--android:backgroundTint="@android:color/background_light"-->
        <!--android:elevation="@android:dimen/notification_large_icon_width"-->
    </LinearLayout>
</LinearLayout>

