<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#21D347">

            <Button
                android:id="@+id/bt_me"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginLeft="0dp"
                android:paddingBottom="5dip"
                android:paddingTop="20dip"
                android:text="＜ Me"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="326dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_stop"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:paddingBottom="5dip"
                android:paddingTop="20dip"
                android:text="Stop"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/algorithm_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置算法"/>
        <TextView
            android:id="@+id/algorithm_setting_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0301"/>

        <TextView
            android:id="@+id/algorithm_setting_result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0301"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pltgrp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:padding="5dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/ct_bmp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALGORITHM" />

        <ListView
            android:id="@+id/algorithm_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INTENSITY" />

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/intense_seek_bar_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>


    </LinearLayout>


</LinearLayout>
