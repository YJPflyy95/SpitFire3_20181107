<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@color/appmain">

            <!--android:text="＜ Me"-->
            <Button
                android:id="@+id/bt_me"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginLeft="0dp"
                android:paddingBottom="5dip"
                android:paddingTop="20dip"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="326dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Qey moments"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_stop"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:paddingBottom="5dip"
                android:paddingTop="20dip"
                android:text="Stop"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/algorithm_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="算法回调"/>
        <TextView
            android:id="@+id/algorithm_setting_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text=""/>

        <Button
            android:id="@+id/heartrate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="心率显示"/>
        <TextView
            android:id="@+id/heartrate_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text=""/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ALGORITHM"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:textSize="18dp"
            android:background="@color/appbackground"/>

        <ListView
            android:id="@+id/algorithm_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="INTENSITY"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:textSize="18dp"
            android:background="@color/appbackground"/>

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/intense_seek_bar_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            />


    </LinearLayout>


</LinearLayout>
