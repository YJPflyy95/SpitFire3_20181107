<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circleimageView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.astri.spitfire.ConnectedDeviceActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#21D347">

    <Button
        android:id="@+id/Back_bt"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="0dp"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:text="ï¼œ Back"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ConnectedDevice_tv"
        android:layout_width="326dp"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Connected Device"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:visibility="visible"
        tools:text="Connected Device" />

    <Button
        android:id="@+id/Connect_bt"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:text="Connect"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <org.astri.spitfire.activitities.spitfireproject.CircleImageView
            android:id="@+id/headIcon"
            android:layout_width="69dp"
            android:layout_height="61dp"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            circleimageView:border_color="#ffffff"
            circleimageView:border_width="1dp" />

        <EditText
            android:id="@+id/AddYourDeviceName_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="left"
            android:hint="Add Your Device Name"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:selectAllOnFocus="false"
            android:singleLine="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#9FB6CD" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MACID_tv"
            android:layout_width="120dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="  MAC ID"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="visible"
            tools:text="   MAC ID" />

        <EditText
            android:id="@+id/MACID_ev"
            android:layout_width="313dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="start"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/BatteryStatus_tv"
            android:layout_width="120dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="  Battery Status"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="visible"
            tools:text="   Battery Status" />

        <EditText
            android:id="@+id/BatteryStatus_ev"
            android:layout_width="146dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="start"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/batterystatus_ib"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:src="@drawable/batterystatus" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/Homeiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_weight="1"
            android:src="@drawable/home" />
        <TextView
            android:id="@+id/Hometv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_gravity="center"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Liveiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_weight="1"
            android:src="@drawable/live" />
        <TextView
            android:id="@+id/Livetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Live"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Historyiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_weight="1"
            android:src="@drawable/history" />
        <TextView
            android:id="@+id/Historytv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="History"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Activitiesiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_weight="1"
            android:src="@drawable/exercise" />
        <TextView
            android:id="@+id/Activitiestv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Activities"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Meiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_weight="1"
            android:src="@drawable/myfilled" />
        <TextView
            android:id="@+id/Metv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:text="Me"


            />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
