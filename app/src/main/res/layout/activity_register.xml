<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="false"
    android:orientation="vertical"
    tools:context="org.astri.spitfire.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/Register_tv"
            android:layout_width="314dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="                  Register"
            android:textColor="#000000"
            android:textSize="24sp"
            android:visibility="visible"
            tools:text="                  Register" />

        <Button
            android:id="@+id/Login_bt"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:backgroundTint="?android:attr/detailsElementBackground"
            android:paddingBottom="5dip"
            android:paddingTop="10dip"
            android:text="Login      "
            android:textSize="20dp"
            android:textColor="#999999"

            android:textAllCaps="false"
            tools:text="Login      "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/EmailAddress_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left"
            android:hint="Email Address"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"/>

        <EditText
            android:id="@+id/Password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:hint="Password"
            android:layout_margin="25dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:background="@null"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"/>
        <!--android:inputType="textPassword"-->

        <EditText
            android:id="@+id/ConfirmPasssword_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:hint="Confirm Passsword"
            android:layout_margin="25dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:background="@null"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"/>
        <!--android:inputType="textPassword"-->

        <Button
            android:id="@+id/Register_bt"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:background="#21D347"
            android:text="Register"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFE0" />
    </LinearLayout>
</LinearLayout>
